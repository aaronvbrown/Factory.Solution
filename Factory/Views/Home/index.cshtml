@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class="headerpadding"></div>

<h1>Welcome to the Factory!</h1>
<hr />

<h4>Engineers</h4>
@if (Model["engineers"].Length == 0)
{
  <p>No engineers have been added yet!</p>
}
<ul>
  @foreach (Engineer engineer in Model["engineers"])
  {
    <li>@Html.ActionLink(@engineer.FirstName, "Details", "Engineers", new {id = @engineer.EngineerId})</li>
  }
</ul>

<h4>Machines</h4>
@if (Model["machines"].Length == 0)
{
  <p>No macines have been added yet!</p>
}
<ul>
  @foreach (Machine machine in Model["machines"])
  {
    <li>@Html.ActionLink(@machine.Description, "Details", "Machines", new {id = @machine.MachineId})</li>
  }
</ul>

<p>@Html.ActionLink("See all Engineers", "Index", "Engineers")</p>
<p>@Html.ActionLink("See all Machines", "Index", "Machines")</p>
<p>@Html.ActionLink("See all Combinations", "Index", "EngineerMachines")</p>