@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class="headerpadding"></div>
<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <h3>No machines have been added yet!</h3>
} 

<ul>
  @foreach(Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.Description}", "Details", new { id = machine.MachineId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new machine", "Create", "Machines")</p>
<p>@Html.ActionLink("Add new engineer", "Create", "Engineers")</p>
<p>@Html.ActionLink("Add new tag", "Create", "Tags")</p>