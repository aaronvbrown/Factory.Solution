@{
  Layout = "_Layout";
}

@model Factory.Models.Machine;
@using Factory.Models;
@using System.Collections.Generic;

<div class=headerpadding></div>

<h4>Edit This Machine: @Html.DisplayFor(model => model.Description)</h4>
<hr />
<p>@Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.LabelFor(model => model.Description)
  @Html.EditorFor(model => model.Description)

  <input type="submit" value="Update">
}
<h4>@Html.ActionLink("Delete Machine", "Delete", new { id = Model.MachineId })</h4>
