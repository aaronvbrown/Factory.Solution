@{
  Layout = "_Layout";
}

@model Factory.Models.Machine;

<div class=headerpadding></div>

<h4>Add engineer certifications to machine:  @Html.DisplayFor(model => model.Description)</h4>
<hr />

@using (Html.BeginForm())
